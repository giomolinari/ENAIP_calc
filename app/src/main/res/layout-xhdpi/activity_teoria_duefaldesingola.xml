<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cham.giovannimolinari.enaip_app.teoria_duefaldesingola">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/costante_intro"
        android:textColor="@color/black_87"
        android:id="@+id/textView42"
        android:textSize="16sp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/costante_parte1"
        android:textColor="@color/black_87"
        android:id="@+id/textView43"
        android:layout_below="@+id/textView42"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/costante_parte2"
        android:textColor="@color/black_87"
        android:id="@+id/textView44"
        android:layout_below="@+id/textView43"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/costante_parte3"
        android:textColor="@color/black_87"
        android:id="@+id/textView45"
        android:layout_below="@+id/textView44"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />
</RelativeLayout>
</ScrollView>