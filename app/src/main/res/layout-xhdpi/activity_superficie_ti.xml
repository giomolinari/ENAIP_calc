<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cham.giovannimolinari.enaip_app.Superficie_ti">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:padding="0dp"
        android:foregroundTint="#edbdbd"
        android:background="@drawable/card"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inserisci i dati necessari:"
        android:id="@+id/textView68"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/black" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/sup_ti"
        android:layout_below="@+id/textView68"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_below="@+id/imageView3"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="Lato A:"
            android:textColor="@android:color/black"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:textSize="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:id="@+id/editText96"
            android:layout_column="1"
            android:layout_width="70dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingLeft="4dp"
            android:textSize="16dp"
            android:nextFocusDown="@+id/editText98"/>
        <TextView
            android:text="Lato D:"
            android:textColor="@android:color/black"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_width="110dp"
            android:layout_column="2"
            android:textSize="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAlignment="textEnd" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:id="@+id/editText86"
            android:layout_column="3"
            android:layout_width="55dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingLeft="4dp"
            android:paddingEnd="4dp"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:nextFocusDown="@+id/editText87"/>

        <TextView
            android:text="Lato E:"
            android:textColor="@android:color/black"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_width="110dp"
            android:layout_column="2"
            android:textSize="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAlignment="textEnd" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:id="@+id/editText87"
            android:layout_width="55dp"
            android:layout_column="3"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingLeft="4dp"
            android:paddingEnd="4dp"
            android:textSize="16dp"
            android:nextFocusDown="@+id/editText97"/>

        <TextView
            android:text="Pendenza \u03B1:"
            android:textColor="@android:color/black"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="16dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_width="60dp"
            android:id="@+id/editText97"
            android:layout_row="2"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="16dp"
            android:nextFocusDown="@+id/editText99"/>


        <TextView
            android:text="Lato B:"
            android:textColor="@android:color/black"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:textSize="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:id="@+id/editText98"
            android:layout_column="1"
            android:layout_width="60dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="16dp"
            android:nextFocusDown="@+id/editText86"/>
        <TextView
            android:text="Gronda:"
            android:textColor="@android:color/black"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_column="2"
            android:layout_width="115dp"
            android:textAlignment="textEnd"
            android:textSize="16dp"
            android:paddingRight="4dp" />
        <EditText
            android:singleLine="true"
            android:layout_gravity="fill_horizontal"
            android:layout_width="60dp"
            android:id="@+id/editText99"
            android:layout_row="2"
            android:layout_column="3"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:textSize="16dp" />



    </GridLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3"
        android:id="@+id/relativeLayout"
        android:layout_alignParentEnd="true">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textColor="@color/colorAccent"
            android:text="CALCOLA DATI"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="RESETTA"
            android:id="@+id/button3"
            android:paddingBottom="8dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_alignTop="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Superficie tavolato:"
            android:id="@+id/textView69"
            android:layout_marginEnd="26dp"
            android:paddingRight="4dp"
            android:layout_above="@+id/button3"
            android:layout_toStartOf="@+id/button2"
            android:layout_marginBottom="63dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Superficie isolante:"
            android:id="@+id/textView70"
            android:paddingRight="4dp"
            android:layout_below="@+id/textView71"
            android:layout_alignEnd="@+id/textView69" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-null-"
            android:id="@+id/textView71"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView69"
            android:layout_alignStart="@+id/textView72"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-null-"
            android:id="@+id/textView72"
            android:layout_alignTop="@+id/textView70"
            android:layout_toEndOf="@+id/textView70"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"
            android:text="Completa i campi richiesti"
            android:id="@+id/textView73"
            android:layout_marginBottom="27dp"
            android:textSize="12sp"
            android:layout_above="@+id/textView69"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
