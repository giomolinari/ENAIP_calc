<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cham.giovannimolinari.enaip_app.DueFaldeDoppia"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="0dp"
        android:foregroundTint="#edbdbd"
        android:background="@drawable/card"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imageView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/doppia"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:paddingBottom="6dp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:text="CALCOLA DATI"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textSize="12dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:width="60sp"
        android:height="20sp"
        android:textAlignment="center"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="-null-"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:width="60sp"
        android:height="20sp"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:text="-null-"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView29"
        android:layout_alignStart="@+id/textView20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:paddingBottom="6dp"
        android:textColor="@color/colorAccent"
        android:text="RESETTA"
        android:id="@+id/button5"
        android:gravity="center"
        android:layout_alignTop="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        android:text="Completa i campi richiesti"
        android:textSize="10dp"
        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/smuss_a"
        android:id="@+id/textView15"
        android:textAlignment="textEnd"
        android:textSize="16dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView19"
        android:layout_toStartOf="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pend_diag"
        android:id="@+id/textView16"
        android:textSize="16dp"
        android:layout_below="@+id/textView29"
        android:layout_alignEnd="@+id/textView29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ang_piantaA"
        android:id="@+id/textView17"
        android:textSize="16dp"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ang_piantaB"
        android:id="@+id/textView18"
        android:textSize="16dp"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView19"
        android:width="60sp"
        android:height="20sp"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:text="-null-"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView20"
        android:width="60sp"
        android:height="20sp"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:text="-null-"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView29"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/smuss_b"
        android:id="@+id/textView29"
        android:textAlignment="textEnd"
        android:textSize="16dp"
        android:layout_below="@+id/textView15"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView30"
        android:width="60sp"
        android:height="20sp"
        android:textAlignment="center"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="-null-"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editText4"
        android:width="55sp"
        android:maxLines="1"
        android:textAlignment="center"
        android:singleLine="false"
        android:maxLength="4"
        android:layout_below="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inserisci la pendenza dell&apos;angolo \u03B1:"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|left"
        android:id="@+id/textView34"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignEnd="@+id/textView2"
        android:paddingStart="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inserisci la pendenza dell&apos;angolo \u03B2:"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|left"
        android:id="@+id/textView35"
        android:textSize="15dp"
        android:layout_below="@+id/textView34"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText5"
        android:layout_toStartOf="@+id/editText4"
        android:paddingStart="4dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editText5"
        android:width="55sp"
        android:maxLines="1"
        android:textAlignment="center"
        android:singleLine="false"
        android:maxLength="4"
        android:layout_below="@+id/editText4"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editText4"
        android:textSize="15dp" />


</RelativeLayout>
