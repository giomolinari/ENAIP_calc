<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textorientation"
        android:id="@+id/textGradi"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="38sp"
        android:textStyle="normal|bold"
        android:layout_alignParentEnd="true"
        android:paddingBottom="22dp" />

    <TextView
        android:id="@+id/textorientation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Inclinazione:"
        android:textColor="@color/black_87"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="60dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Annota valore"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGradi"
        android:layout_centerHorizontal="true"
        android:id="@+id/button13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/black_87"
        android:id="@+id/textView130" />
</RelativeLayout>