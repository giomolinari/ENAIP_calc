<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cham.giovannimolinari.enaip_app.Convertitore">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:padding="0dp"
        android:foregroundTint="#edbdbd"
        android:background="@drawable/card"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/button10" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:paddingEnd="4dp" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_below="@+id/editText6"
        android:layout_alignEnd="@+id/imageView6"
        android:paddingEnd="4dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinner3"
        android:textAlignment="center"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="6"
        android:editable="true"
        android:paddingStart="4dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_alignTop="@+id/editText6"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignStart="@+id/spinner4"
        android:enabled="false"
        android:editable="false"
        android:textAlignment="center"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="7"
        android:paddingEnd="4dp"
        android:textSize="15dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:textColor="@color/colorAccent"
        android:text="CONVERTI"
        android:id="@+id/button10"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/spinner4"
        android:layout_alignParentEnd="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="12dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="RESETTA"
        android:id="@+id/button11"
        android:paddingBottom="6dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_alignTop="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Convertitore angolo piano:"
        android:id="@+id/textView36"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/red"
        android:visibility="invisible"
        android:text="Inserisci un valore nel campo"
        android:id="@+id/textView37"
        android:textSize="10dp"
        android:paddingTop="6dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/freccetta"
        android:visibility="visible"
        android:background="@null"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
