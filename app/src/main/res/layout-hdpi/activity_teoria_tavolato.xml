<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.cham.giovannimolinari.enaip_app.teoria_tavolato">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tavolato_intro"
            android:textColor="@color/black_87"
            android:id="@+id/textView63"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tavolato_parte1"
            android:textColor="@color/black_87"
            android:id="@+id/textView64"
            android:layout_below="@+id/textView63"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tavolato_parte2"
            android:textColor="@color/black_87"
            android:id="@+id/textView65"
            android:layout_below="@+id/textView64"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tavolato_parte3"
            android:textColor="@color/black_87"
            android:id="@+id/textView66"
            android:layout_below="@+id/textView65"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tavolato_parte4"
            android:textColor="@color/black_87"
            android:id="@+id/textView67"
            android:layout_below="@+id/textView66"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp" />
    </RelativeLayout>
</ScrollView>