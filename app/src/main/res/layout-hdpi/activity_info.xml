<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.cham.giovannimolinari.enaip_app.Info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView6"
            android:text="@string/contatta"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_below="@+id/textView95"
            android:layout_alignParentStart="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:textColor="@color/black_87" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView39"
            android:text="@string/info"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_below="@+id/textView96"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:textColor="@color/black_87" />

        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/button12"
            android:textColor="#ffffff"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_info3"
            android:paddingLeft="18dp"
            android:paddingTop="18dp"
            android:paddingRight="18dp"
            android:paddingBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView92"
            android:layout_alignParentTop="true"
            android:paddingTop="18dp"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView9"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/versione"
            android:id="@+id/textView93"
            android:layout_below="@+id/textView92"
            android:layout_alignEnd="@+id/textView92"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/imageView9"
            android:textAlignment="textStart"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/copyright"
            android:id="@+id/textView94"
            android:textSize="10sp"
            android:layout_below="@+id/textView93"
            android:textAlignment="textStart"
            android:layout_alignEnd="@+id/textView93"
            android:paddingLeft="10dp"
            android:layout_toEndOf="@+id/imageView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contattaci"
            android:id="@+id/textView95"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ringraziamenti"
            android:id="@+id/textView96"
            android:layout_below="@+id/button12"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Valuta l&apos;app"
            android:id="@+id/textView97"
            android:layout_below="@+id/textView39"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView98"
            android:text="@string/valuta"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_below="@+id/textView97"
            android:layout_alignParentStart="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:textColor="@color/black_87" />

        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOTA"
            android:id="@+id/button9"
            android:textColor="#ffffff"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_below="@+id/textView98"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>